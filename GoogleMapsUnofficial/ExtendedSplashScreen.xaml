                </Grid>
                <Grid x:Name="Ring3" RenderTransformOrigin="0.5,0.5" Opacity="0" >
                    <Grid.RenderTransform>
                        <CompositeTransform/>
                    </Grid.RenderTransform>
                    <ContentControl ContentTemplate="{StaticResource Dot1}" Content="{x:Null}" HorizontalAlignment="Center" />
                </Grid>
                <Grid x:Name="Ring4" RenderTransformOrigin="0.5,0.5" Opacity="0" >
