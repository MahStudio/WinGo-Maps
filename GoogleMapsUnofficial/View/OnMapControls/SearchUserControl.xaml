<UserControl
    x:Class="GoogleMapsUnofficial.View.OnMapControls.SearchUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary Source="/Resources/CustomControls/AutoSuggestionBox.xaml"/>
    </UserControl.Resources>
    <Grid Background="White">
        <AutoSuggestBox Style="{StaticResource MyAutoSuggestBox}" FontFamily="B Koodak" PlaceholderText="Search..."
            ItemsSource="{Binding SearchResults}"
            TextChanged="Control2_TextChanged" x:Name="SearchBox"
            QueryIcon="Find" Visibility="Visible"
            QuerySubmitted="Control2_QuerySubmitted"
            VerticalContentAlignment="Center"
            VerticalAlignment="Center" MinWidth="250" Height="36"
            SuggestionChosen="Control2_SuggestionChosen">
            <AutoSuggestBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding description}" TextAlignment="DetectFromContent" FontFamily="B Koodak"/>
                </DataTemplate>
            </AutoSuggestBox.ItemTemplate>

        </AutoSuggestBox>
    </Grid>
</UserControl>
