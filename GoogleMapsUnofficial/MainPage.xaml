<Page
    x:Class="GoogleMapsUnofficial.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GoogleMapsUnofficial"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:directionscontrols="using:GoogleMapsUnofficial.View.DirectionsControls"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="54"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="{StaticResource SystemControlBackgroundAccentBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Content="Download Map" Click="Button_Click" Grid.Column="0"/>
            <Button Content="Directions" Grid.Column="1" Click="DirBtn_Click"/>
        </Grid>
        <SplitView Grid.Row="1">
            <SplitView.Pane>
                <Grid>
                    
                </Grid>
            </SplitView.Pane>
            <Grid x:Name="Gr">
                <Frame x:Name="Fr"/>
            </Grid>
        </SplitView>
    </Grid>
</Page>
