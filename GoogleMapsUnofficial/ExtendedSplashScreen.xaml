                    <ContentControl ContentTemplate="{StaticResource Dot2}" Content="{x:Null}" HorizontalAlignment="Center" />
                </Grid>
                <Grid x:Name="Ring5" RenderTransformOrigin="0.5,0.5" Opacity="0" >
                    <Grid.RenderTransform>
                        <CompositeTransform/>
                    </Grid.RenderTransform>
                    <ContentControl ContentTemplate="{StaticResource Dot1}" Content="{x:Null}" HorizontalAlignment="Center" />
                </Grid>
                <Grid x:Name="Earth" RenderTransformOrigin="0.5,0.5">
                    <Grid.RenderTransform>
                        <CompositeTransform/>
                    </Grid.RenderTransform>
                    <TextBlock Text="&#xE128;" FontFamily="Segoe MDL2 Assets" FontSize="94" HorizontalAlignment="Center" VerticalAlignment="Center"/>
