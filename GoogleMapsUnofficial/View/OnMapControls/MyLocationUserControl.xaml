<UserControl
    x:Class="GoogleMapsUnofficial.View.OnMapControls.MyLocationUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="50" Width="50">

    <UserControl.Resources>
        <ResourceDictionary Source="/Resources/CustomControls/DotButton.xaml"/>
    </UserControl.Resources>
    <Grid CornerRadius="90">
        <controls:DropShadowPanel BlurRadius="8"
                                  ShadowOpacity="0.3"
                                  OffsetX="2"
                                  OffsetY="2"
                                  Color="Black" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
            <Button x:Name="thisbtn" Width="48" Height="48" BorderBrush="{ThemeResource SystemControlBackgroundAccentBrush}" Background="{ThemeResource SystemControlBackgroundAccentBrush}" Foreground="White" Click="Button_Click" Style="{StaticResource dotbut}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0" Content="&#xE1D2;" FontFamily="Segoe MDL2 Assets" FontSize="18"/>
        </controls:DropShadowPanel>
    </Grid>
</UserControl>
