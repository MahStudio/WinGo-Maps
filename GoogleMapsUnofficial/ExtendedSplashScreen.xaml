                        <CompositeTransform/>
                    </Grid.RenderTransform>
                    <ContentControl ContentTemplate="{StaticResource Dot1}" Content="{x:Null}" HorizontalAlignment="Center" />
                </Grid>
                <Grid x:Name="Ring2" RenderTransformOrigin="0.5,0.5" Opacity="0" >
